@model Sunodia.ClassManagement.Models.CourseMaterialViewModel


<h2>Course Materials for @Model.Course.CourseName</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { CourseId = Model.CourseId }, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Materials.First().MaterialName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materials.First().CostToStudent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materials.First().CostToOrg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materials.First().PurchaseOptions)
        </th>
        <th>
            Vendor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Materials) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaterialName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostToStudent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostToOrg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseOptions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor.VendorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    <tr><td/><td>@Model.Materials.Sum(x => x.CostToStudent).ToString("C")</td>
    <td>@Model.Materials.Sum(x=>x.CostToOrg).ToString("C")</td>
        </tr>


</table>
<div>
    @Html.ActionLink("Back to Course", "Edit", "Cours", new { id = Model.CourseId }, null)
</div>