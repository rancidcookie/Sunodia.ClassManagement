@model Sunodia.ClassManagement.Models.PeopleGroupViewModel

@{
    ViewBag.Title = "Groups";
}

<h2>Groups for @Model.Person.FirstName @Model.Person.LastName</h2>

<p>
</p>

<table class="table">
@foreach (var item in Model.Person.PersonGroups) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.GroupName)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
<p>
</p>
<p>
    <div class="form-group">
        @Html.LabelFor(model => model.AllGroups, "Add Group", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
        </div>
    </div>
    @using (Html.BeginForm("Create","PersonGroups"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.PersonId)
        @Html.DropDownList("GroupId", Model.AllGroups)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to Edit", "Edit", "People", new { id = Model.PersonId }, null)
    </div>
</p>
