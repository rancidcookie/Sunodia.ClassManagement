@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Manage Events</h1>
    <p class="lead">Manage courses, events, students and their attendance</p>
    <p><a href="@Url.Action("ManageCourses", "Home")" class="btn btn-primary btn-lg">Go! &raquo;</a></p>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Manage People</h2>
        <p>Manage Students etc.</p>
        <p><a href="@Url.Action("Index", "People")" class="btn btn-primary btn-lg">Go! &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Manage Lists</h2>
        <p>
            Manage the items found in pull downs, 'Payment Methods', 'Registration Types', 'Course Formats' etc.
        </p>
        <p><a href="@Url.Action("ManageLists", "Home")" class="btn btn-primary btn-lg">Go! &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Analysis</h2>
        <p>Port to Quickbooks, view course outcomes, add additional line items...</p>
        <p><a href="@Url.Action("PickClass", "Analysisx")" class="btn btn-primary btn-lg">Go! &raquo;</a></p>
    </div>
</div>