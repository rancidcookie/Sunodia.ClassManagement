@model IEnumerable<Sunodia.ClassManagement.Models.EventStudent>

@{
    ViewBag.Title = "Index";
}

<h2>Add Students to @ViewBag.EventNickName</h2>

<p>
    @Html.ActionLink("Add", "Add", new { id = ViewBag.EventId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Person.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Person.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person.LastName)
        </td>
        <td`>
            @Html.DisplayNameFor(model => model.Person.Email)
        </td`>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
