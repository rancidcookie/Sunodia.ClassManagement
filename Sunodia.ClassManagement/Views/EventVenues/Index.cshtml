@model Sunodia.ClassManagement.Models.EventVenueViewModel

@{
    ViewBag.Title = "Manage Venues";
}

<h2>Manage Venues for @Model.Event.NickName</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">

    @foreach (var item in Model.Event.EventVenues)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.City)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<hr />
